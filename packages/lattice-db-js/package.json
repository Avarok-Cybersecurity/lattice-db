{
  "name": "lattice-db",
  "version": "0.1.0",
  "description": "World's First Production-Grade Hybrid Graph/Vector Database for the Browser",
  "type": "module",
  "main": "dist/lattice-db.js",
  "module": "dist/lattice-db.esm.js",
  "types": "dist/lattice-db.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lattice-db.esm.js",
      "require": "./dist/lattice-db.js",
      "types": "./dist/lattice-db.d.ts"
    }
  },
  "files": [
    "dist/",
    "wasm/",
    "README.md"
  ],
  "scripts": {
    "build:wasm": "wasm-pack build ../../crates/lattice-server --target web --out-dir ../../packages/lattice-db-js/wasm --no-default-features --features wasm",
    "build:types": "tsc --emitDeclarationOnly",
    "build:esm": "esbuild src/index.ts --bundle --outfile=dist/lattice-db.esm.js --format=esm --platform=browser --external:./wasm/*",
    "build:cjs": "esbuild src/index.ts --bundle --outfile=dist/lattice-db.js --format=cjs --platform=browser --external:./wasm/*",
    "build:minify": "esbuild src/index.ts --bundle --minify --outfile=dist/lattice-db.min.js --format=esm --platform=browser --external:./wasm/*",
    "build:ts": "npm run build:types && npm run build:esm && npm run build:cjs && npm run build:minify",
    "build": "npm run build:wasm && npm run build:ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Avarok-Cybersecurity/lattice-db.git"
  },
  "keywords": [
    "vector-database",
    "graph-database",
    "wasm",
    "browser",
    "rag",
    "ai",
    "hybrid-search",
    "cypher",
    "hnsw",
    "similarity-search"
  ],
  "author": "Avarok Cybersecurity",
  "license": "MIT OR Apache-2.0",
  "bugs": {
    "url": "https://github.com/Avarok-Cybersecurity/lattice-db/issues"
  },
  "homepage": "https://github.com/Avarok-Cybersecurity/lattice-db#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.7.0"
  }
}
